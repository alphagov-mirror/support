<div class="alert alert-info">
  <p>Please use this path to:</p>
  <ul>
    <li>report planned departmental changes that affect GOV.UK and its users</li>
    <li>report issues that don't fit into other categories</li>
  </ul>
</div>

<div class="form-group">
  <span class="form-label">
    <%= f.label :title, "Title of request" %>
  </span>
  <span class="form-wrapper">
    <%= f.text_field :title, placeholder: "General request", class: "input-md-6 form-control" %>
  </span>
</div>

<div class="form-group">
  <span class="form-label">
    <%= f.label :details do %>
      Details<abbr title="required">*</abbr>
    <% end %>
  </span>
  <span class="form-wrapper">
    <%= f.text_area :details, required: true, aria: { required: true }, class: "input-md-6 form-control", rows: 6, cols: 50 %>
  </span>
</div>

<div class="form-group">
  <span class="form-label">
    <%= f.label :url, "URL (if applicable)" %>
  </span>
  <span class="form-wrapper">
    <%= f.text_field :url, class: "input-md-6 form-control" %>
  </span>
</div>

<%= render partial: "support/collaborators", locals: { f: f } %>
